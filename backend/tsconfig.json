{
	"extends": "./../common/tsconfig.json",
	"compilerOptions": {
		"module": "CommonJS",
		"outDir": "./dist",
		"baseUrl": "./",
		"paths": {
			"@/*": [
				"src/*"
			],
			"%/*": [
				"./../common/*"
			]
		},
		"types": [
			"node",
			"jest"
		],
	},
	"include": [
		"src/**/*.ts",
		"tests/**/*.ts"
	],
	"exclude": [
		"node_modules"
	]
}
