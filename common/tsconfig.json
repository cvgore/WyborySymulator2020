{
	"compilerOptions": {
		"module": "esnext",
		"target": "esnext",
		"strict": true,
		"declaration": true,
		"removeComments": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"allowSyntheticDefaultImports": true,
		"sourceMap": true,
		"incremental": true,
		"moduleResolution": "node",
		"skipLibCheck": true,
		"esModuleInterop": true,
		"importHelpers": true,
		"lib": [
			"esnext",
			"es2015"
		],
		"types": [
			"webpack-env",
			"jest"
		]
	}
}
