{
	"extends": "../common/tsconfig.json",
	"compilerOptions": {
		"jsx": "preserve",
		"baseUrl": "./",
		"paths": {
			"@/*": [
				"src/*"
			],
			"%/*": [
				"../common/*"
			]
		},
		"lib": [
			"dom",
			"dom.iterable",
			"ESNext",
			"ES2015"
		],
		"outDir": "./public"
	},
	"include": [
		"src/**/*.ts",
		"src/**/*.tsx",
		"src/**/*.vue",
		"tests/**/*.tsx",
		"tests/**/*.ts"
	],
	"exclude": [
		"node_modules"
	]
}
